<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:layout_gravity="center"
    android:background="#ffcc11">

    <TextView
        android:id="@+id/signInHeader"
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:gravity="center"

        android:text="Group Markers"
        android:textStyle="bold"
        android:textSize="30dp"
        android:paddingTop="30dp" />

    <EditText
        android:layout_width="370dp"
        android:layout_height="50dp"
        android:id="@+id/name_edt"
        android:textSize="17dp"
        android:background="#ffffff"
        android:layout_marginTop="20dp"
        android:hint="이름을 입력해주세요.."
        android:gravity="center" />

    <EditText
        android:layout_width="370dp"
        android:layout_height="50dp"
        android:inputType="phone"
        android:textSize="17dp"
        android:layout_marginTop="20dp"
        android:id="@+id/phone_edt"
        android:background="#ffffff"
        android:gravity="center"
        android:hint="전화번호를 입력해주세요." />

    <EditText
        android:layout_width="370dp"
        android:layout_height="50dp"
        android:inputType="textEmailAddress"
        android:layout_marginTop="20dp"
        android:hint="E-Mail을 입력해주세요"
        android:gravity="center"
        android:textSize="17dp"
        android:id="@+id/email_edt"
        android:background="#ffffff"/>

    <EditText
        android:layout_width="370dp"
        android:layout_height="50dp"
        android:inputType="textPassword"
        android:layout_marginTop="20dp"
        android:hint="비밀번호를 입력해주세요"
        android:gravity="center"
        android:textSize="17dp"
        android:id="@+id/pw_edt1"
        android:background="#ffffff"/>

    <EditText
        android:layout_width="370dp"
        android:layout_height="50dp"
        android:inputType="textPassword"
        android:layout_marginTop="20dp"
        android:hint="비밀번호를 확인해주세요"
        android:gravity="center"
        android:textSize="17dp"
        android:background="#ffffff"
        android:id="@+id/pw_edt2" />

    <Button
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:id="@+id/pro_btn"
        android:background="#ff6611"
        android:layout_marginTop="30dp"
        android:text="회원가입"
        android:textColor="#111111"
        android:textSize="17dp"

        />


</LinearLayout>