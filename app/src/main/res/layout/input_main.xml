<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="30sp"
        android:textStyle="bold"
        android:paddingTop="5sp"
        android:paddingBottom="5sp"
        android:typeface="monospace"
        android:text="Insert Test" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Spinner
            android:id="@+id/year"
            android:layout_width="120sp"
            android:layout_height="wrap_content"
            android:prompt="@string/yearSelect" />

        <Spinner
            android:id="@+id/month"
            android:layout_width="60sp"
            android:layout_height="wrap_content"
            android:prompt="@string/monthSelect" />

        <Spinner
            android:id="@+id/date"
            android:layout_width="60sp"
            android:layout_height="wrap_content"
            android:prompt="@string/dateSelect" />

        <Spinner
            android:id="@+id/hour"
            android:layout_width="60sp"
            android:layout_height="wrap_content"
            android:prompt="@string/hourSelect" />

        <Spinner
            android:id="@+id/minute"
            android:layout_width="60sp"
            android:layout_height="wrap_content"
            android:prompt="@string/minuteSelect" />

    </LinearLayout>

    <EditText
        android:id="@+id/account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Account"
        android:inputType="textPersonName" />

    <Spinner
        android:id="@+id/category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:prompt="@string/categorySelect" />

    <EditText
        android:id="@+id/money"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Money"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Content"
        android:inputType="textPersonName" />


    <Button
        android:id="@+id/insertContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:gravity="center"
        android:background="#111111"
        android:layout_margin="10sp"
        android:text="Insert" />

</LinearLayout>