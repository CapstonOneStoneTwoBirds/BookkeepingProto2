<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change Password"
            android:layout_marginTop="50sp"
            android:layout_marginBottom="50sp"
            android:textSize="40sp"
            android:id="@+id/textView5"
            android:layout_alignBottom="@+id/profile_iv"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your current passwrod is temporary key."
            android:textSize="15sp"
            android:layout_marginStart="20sp"
            android:id="@+id/textView14" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please change password."
            android:textSize="15sp"
            android:layout_marginStart="20sp"
            android:layout_marginBottom="25sp"
            android:id="@+id/textView15" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_iv"
            android:layout_centerHorizontal="true">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="new"
                    android:layout_marginLeft="25sp"
                    android:paddingTop="5sp"
                    android:textSize="20sp"
                    android:layout_gravity="center_horizontal" />
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:textSize="20sp"
                    android:ems="7"
                    android:layout_marginLeft="35sp"
                    android:id="@+id/changepw_pw1_et"
                    android:layout_gravity="right" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="repeat"
                    android:layout_marginLeft="25sp"
                    android:paddingTop="5sp"
                    android:textSize="20sp"
                    android:layout_gravity="center_horizontal" />
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:textSize="20sp"
                    android:ems="7"
                    android:layout_marginLeft="17sp"
                    android:id="@+id/changepw_pw2_et"
                    android:layout_gravity="right" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="370sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fix!"
            android:textSize="24sp"
            android:id="@+id/changepw_btn"
            android:layout_marginTop="25sp"
            android:layout_marginRight="30sp"
            android:layout_gravity="right" />


    </LinearLayout>

</RelativeLayout>